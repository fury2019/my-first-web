/* 공통 스타일 */
body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f6eb; /* 이미지에서 배경색 참고 */
    color: #333;
}

h1 {
    text-align: center;
    margin-top: 20px;
    font-size: 24px;
    color: #d47d25; /* 강조 색상 */
}

/* 테이블 스타일 */
table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    background-color: #fff; /* 테이블 배경 흰색 */
}

th, td {
    padding: 10px 15px;
    text-align: left;
    border: 1px solid #ddd;
    font-size: 14px;
}

th {
    background-color: #f5deb3; /* 헤더 색상 */
    color: #5a2d0c;
    font-weight: bold;
}

tr:nth-child(even) {
    background-color: #f9f6eb; /* 짝수행 배경색 */
}

tr:hover {
    background-color: #f4e1c4; /* 행 강조 효과 */
    cursor: pointer;
}

/* 버튼 스타일 */
button {
    background-color: #5a2d0c;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 14px;
    border-radius: 4px;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #b2651a;
}


/* 반응형 디자인 */
@media screen and (max-width: 768px) {
    table {
        width: 100%;
        font-size: 12px;
    }

    th, td {
        padding: 8px;
    }

    h1 {
        font-size: 20px;
    }
}
