  @font-face {
    font-family: 'MinSans-Regular';
    src: url('https://fastly.jsdelivr.net/gh/projectnoonnu/noonfonts_2201-2@1.0/MinSans-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

.body {
	background-color: #FFF3C8; /* 전체 배경색 설정 */
	display: flex;
	/* Flexbox 사용 */
	flex-direction: column;
	/* 세로 방향으로 정렬 */
	align-items: center;
	/* 가로 방향 가운데 정렬 */
	text-align: center;
	/* 텍스트 가운데 정렬 */
	padding: 20px 0;
	/* 상하 패딩 */
	font-family: 'MinSans-Regular', sans-serif;
	
}

.body img {
	margin-bottom: 20px;
	/* 이미지 아래에 간격 추가 */
}

.body h2 {
	font-family: 'MinSans-Regular', sans-serif;
	margin: 15px 0;
}

.body h5 {
	font-family: 'MinSans-Regular', sans-serif;
}

.carousel {
	background-color: #FFF3C8; /* 전체 배경색 설정 */
}

.carousel-inner img {
	max-height: 750px;
	/* 원하는 최대 높이 설정 */
	object-fit: contain;
	/* 이미지 비율 유지 */
}



/* 로그인 */

#login_body{
	
	font-family: 'MinSans-Regular', sans-serif;
	background-image: url('your-background-image.jpg');
	background-size: auto;
	margin: 0;
	margin-top: -10px;
	display: flex;
	flex-direction: column;
	height: 101%;
	justify-content: space-between;
}

#hr{
	color: sienna;
	margin-top: -20px;
	margin-left: -10px;
	margin-right: -20px;
}

.idid{
	width: 45%;
}

.Lid{
	text-align: left;
	vertical-align: bottom;
	margin-bottom: 0px;
	margin-left: 15px;
	color: black;
}

.login-container {
	background: rgba(255, 255, 255, 0.8);
	padding: 40px 20px;
	border-radius: 10px;
	/* box-shadow: 0 0 15px rgba(0, 0, 0, 0.2); */
	width: 350px;
	text-align: center;
	margin: auto;
	z-index: 50;
	position: relative;
}

.login-container h1 {
	margin-bottom: 30px;
	font-size: 24px;
}

.login-container input {
	width: calc(100% - 20px);
	padding: 10px;
	margin: 10px 0;
	border: 1px solid rgb(241, 241, 225);
	border-radius: 5px;
	/* box-sizing: border-box; */
}

.login-container input[type="submit"] {
	background-color: sienna;
	border: none;
	color: white;
	cursor: pointer;
	width: 100%;
	padding: 10px;
	margin-top: 20px;
}

.login-container input[type="submit"]:hover {
	background-color: rgb(148, 74, 39);
	box-shadow: 1px 2px 2px 2px rgb(173, 172, 172);

}

.login-container p {
	color: red;
}
