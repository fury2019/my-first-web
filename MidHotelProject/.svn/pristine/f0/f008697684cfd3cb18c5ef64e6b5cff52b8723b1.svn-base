  @font-face {
    font-family: 'MinSans-Regular';
    src: url('https://fastly.jsdelivr.net/gh/projectnoonnu/noonfonts_2201-2@1.0/MinSans-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}

	html, body {
	    margin: 0; /* 기본 여백 제거 */
	    padding: 0; /* 기본 패딩 제거 */
	    font-family: 'MinSans-Regular', sans-serif; /* 기본 글꼴 설정 */
	    background-color: #fff8dc; /* 배경 색상 설정 */
	    height: 100%; /* 전체 높이 설정 */
	}
	
	.layout {
	    display: flex; /* 유연한 박스 모델 사용 */
	    flex-direction: column; /* 세로 방향 정렬 */
	    min-height: 100vh; /* 최소 높이를 뷰포트 높이로 설정 */
	    align-items: center; /* 수직 가운데 정렬 */
	}
	
	.content {
	    display: flex; /* 유연한 박스 모델 사용 */
	    flex: 1; /* 남은 공간을 차지하게 설정 */
	    width: 100%; /* 전체 너비 사용 */
	}
	
	.footer {
	    margin-top: auto; /* 자동 마진으로 하단에 위치 */
	}
	
	.sidebar {
	    width: 200px; /* 사이드바 너비 설정 */
	    background-color: #f5deb3; /* 사이드바 배경 색상 */
	    color: #333; /* 텍스트 색상 설정 */
	    padding: 20px; /* 내부 여백 설정 */
	    border-right: 1px solid #e3d5b8; /* 오른쪽 경계선 설정 */
	    height: calc(100vh - 130px); /* 전체 높이에서 130px을 뺀 높이 설정 */
	    position: sticky; /* 스크롤 시 고정 위치 유지 */
	    top: 60px; /* 상단에서 60px 떨어진 위치에 고정 */
	}
	
	.sidebar ul {
	    list-style: none; /* 기본 목록 스타일 제거 */
	    padding: 0; /* 패딩 제거 */
	    margin: 0; /* 여백 제거 */
	}
	
	.sidebar ul li {
	    padding: 10px 15px; /* 내부 여백 설정 */
	    border-bottom: 1px solid #e3d5b8; /* 하단 경계선 설정 */
	}
	
	.sidebar ul li a {
	    color: #8b4513; /* 링크 텍스트 색상 설정 */
	    text-decoration: none; /* 밑줄 제거 */
	    font-size: 16px; /* 글꼴 크기 설정 */
	    display: block; /* 블록 요소로 설정 */
	}
	
	.sidebar ul li a:hover {
	    background-color: #deb887; /* 마우스 오버 시 배경 색상 변경 */
	    color: white; /* 마우스 오버 시 텍스트 색상 변경 */
	    font-weight: bold; /* 마우스 오버 시 글꼴 두껍게 설정 */
	}
	
	.faq-title, .faq-content {
	    overflow: hidden; /* 넘치는 내용 숨김 */
	    text-overflow: ellipsis; /* 넘치는 텍스트에 생략 부호 표시 */
	    white-space: nowrap; /* 한 줄로 표시 */
	    cursor: pointer; /* 클릭 가능하다는 것을 나타내기 위해 커서 변경 */
	    transition: max-height 0.3s ease; /* 부드러운 높이 변화 */
	}
	
	.faq-title {
	    max-width: 100px; /* 최대 너비 설정 */
	}
	
	.faq-content {
	    max-height: 100px; /* 기본 높이 설정 */
	    max-width: 200px; /* 최대 너비 설정 */
	}
	
	.faq-content.expanded {
	    max-height: 200px; /* 확장된 상태의 높이 설정 */
	    white-space: normal; /* 여러 줄로 표시 */
	}
	
	.faq-info {
	    padding: 20px; /* 내부 여백 설정 */
	    background-color: #fff8dc; /* 배경 색상 설정 */
	    color: #333; /* 텍스트 색상 설정 */
	    flex: 1; /* 남은 공간을 차지하게 설정 */
	}
	
	table {
	    width: 100%; /* 전체 너비 사용 */
	    margin-bottom: 20px; /* 하단 여백 설정 */
	    border-collapse: collapse; /* 테이블 경계선 합치기 */
	}
	
	table th, .table td {
	    text-align: left; /* 텍스트 왼쪽 정렬 */
	    padding: 10px; /* 내부 여백 설정 */
	    border: 1px solid #ddd; /* 경계선 설정 */
	}
	
	table th {
	    background-color: #f7f7f7; /* 헤더 배경 색상 설정 */
	}
	
	.faq-actions {
	    display: flex; /* 플렉스 박스 모델 사용 */
		justify-content: flex-end; /* 항목을 오른쪽으로 정렬 */
	    text-align: center; /* 중앙 정렬 */
	    margin-top: 20px; /* 상단 여백 설정 */
		margin-bottom: 10px;
	}
	
	.faq-actions button {
   	 	margin: 0 10px; /* 좌우에 10px의 마진 설정 */
}
